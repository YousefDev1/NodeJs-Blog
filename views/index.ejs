<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="pro/css/pro.css">
    <title>Home</title>
</head>
<body>
    <div class="container">
        <div class="title">
            <%= title %> 
        </div>
        <div class="content">
            <div class="add-btn flex justify-center my-30">
                <a href="/add" class="btn btn-success">
                    Add Article
                </a>
            </div>
            <% articles.forEach(article => { %>

                <div class="article">
                    <div class="article__title">
                        <%= article.title %> 
                    </div>
                    <div class="article__body">
                        <%= article.body %> 
                    </div>
                    <span class="article__author">
                        <%= article.author %> 
                    </span>
                    <a href="#" data-id="<%= article._id %>" class="btn btn-danger delete-article">
                        Delete
                    </a>
                </div>

            <% }); %> 
        </div>
    </div>

    <script src="/js/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(()=> {
            $('.delete-article').on('click', (e)=> {
                $target = $(e.target)
                const id = $target.attr('data-id');
                $.ajax({
                    type: 'DELETE',
                    url: '/' + id,
                    success: (response)=> {
                        alert('Delete An Article')
                        window.location.href = '/'
                    }
                })
            })
        })
    </script>
</body>
</html>

